@model IEnumerable<App.Models.Bookings.Booking>

@{
    ViewData["Title"] = "Danh Sách Booking";
}

<h1>Danh Sách Booking</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<p><a class="btn btn-primary" asp-action="Create">Tạo Mới</a></p>

<table class="table table-bordered table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ClientSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>          
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th> CRUD</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientSlot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingSlot)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            
            <td>
                
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Cập Nhật</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
