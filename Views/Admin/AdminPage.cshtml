@{
    ViewData["Title"] = "Admin Page";
   
}
@using Microsoft.AspNetCore.Identity
@using App.Models
@model IEnumerable<App.Models.Bookings.Booking>
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html>

<head>
    <title>Admin Page</title>

    <meta name="viewport"
        content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css">
    <link rel="stylesheet" type="text/css" href="~/fontawesome-free/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styleAdmin.css"> *
</head>

<body class="overlay-scrollbar">

    <div class="navbar">

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link">
                    <i class="fas fa-bars" onclick="collapseSidebar()"></i>
                </a>
            </li>
        </ul>

        <form class="navbar-search">
            <input type="text" name="Search" class="navbar-search-input" placeholder="What you looking for...">
            <i class="fas fa-search"></i>
        </form>
        @* <partial name="_SearchPage" /> *@
        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"
            class="navbar-right">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-controller="Manage" asp-action="Index"
                        title="Manage">Xin chào
                            @UserManager.GetUserName(User)!</a>

                    </li>
                    <li class="nav-item ">
                        <button asp-area="Identity" asp-controller="Home" asp-action="Index" method="" id="" type="submit"
                        class="btn btn-link navbar-btn navbar-link edit-button">Đăng
                            xuất</button>
                    </li>
                </ul>
            </form>
        }
        <ul class="navbar-nav nav-right">
            <li class="nav-item mode">
                <a class="nav-link" href="#" onclick="switchTheme()">
                    <i class="fas fa-moon dark-icon"></i>
                    <i class="fas fa-sun light-icon"></i>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link">
                    <i class="fas fa-bell dropdown-toggle" data-toggle="notification-menu"></i>
                    <span class="navbar-badge">1</span>
                </a>
                <ul id="notification-menu" class="dropdown-menu notification-menu">
                    <div class="dropdown-menu-header">
                        <span>

                        </span>
                    </div>
                    <div class="dropdown-menu-content overlay-scrollbar scrollbar-hover">
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="fas fa-gift"></i>
                                </div>
                                <span>
                                    Lorem ipsum dolor sit amet, consectetuer adipiscing elit.
                                    <br>
                                    <span>
                                        28/11/2021
                                    </span>
                                </span>
                            </a>
                        </li>
                    </div>
                    <div class="dropdown-menu-footer">
                        <span>
                            View all notifications
                        </span>
                    </div>
                </ul>
            </li>
            <li class="nav-item avt-wrapper">
                <div class="avt dropdown">
                    <img src="https://i.pinimg.com/564x/1b/76/72/1b767212b90564ce4b52e7b54c0dc81b.jpg" alt="User image"
                        class="dropdown-toggle" data-toggle="user-menu">
                    <ul id="user-menu" class="dropdown-menu">
                        <li class="dropdown-menu-item">
                            <a class="dropdown-menu-link">
                                <div>
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <span>Profile</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="fas fa-cog"></i>
                                </div>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="far fa-credit-card"></i>
                                </div>
                                <span>Payments</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="fas fa-spinner"></i>
                                </div>
                                <span>Projects</span>
                            </a>
                        </li>
                        <li class="dropdown-menu-item">
                            <a href="#" class="dropdown-menu-link">
                                <div>
                                    <i class="fas fa-sign-out-alt"></i>
                                </div>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>

    </div>

    <div class="sidebar">
        <ul class="sidebar-nav">
            <li class="sidebar-nav-item">
                <a href="#" class="sidebar-nav-link active">
                    <div>
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <span>
                        Dashboard
                    </span>
                </a>
                <a class="sidebar-nav-link active"  asp-area="Branch" asp-controller="Branch" asp-action="Index"><div>
                        <i class="fas fa-angry"></i>
                    </div>
                    <span>
                        Branch
                    </span></a>
            </li>

        </ul>
    </div>
    <!-- end sidebar -->
    <!-- main content -->
    <div class="wrapper">
        <div class="row">
            <div class="col-3 col-m-6 col-sm-6">
              <div class="counter bg-success">
                    <p>
                        <i class="far fa-comments"></i>
                    </p>
                    <h3>@ViewBag.count</h3>
                    <h4>Booking In Day</h4>
                    </div>
            
            
            </div>
            <div class="col-3 col-m-6 col-sm-6">   
                <div class="counter bg-primary">
                    <p>
                        <i class="far fa-eye"></i>
                    </p>
                    <h3>@ViewBag.branch1 Booking</h3>
                    <h4>Nắng Rooftop</h4>
                </div>
            </div>
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-warning">
                    <p>
                        <i class="fas fa-store-alt"></i>
                    </p>
                     <h3>@ViewBag.branch2 Booking</h3>
                    <h4>2PM</h4>
                </div>
            </div>
            <div class="col-3 col-m-6 col-sm-6">
                <div class="counter bg-success">
                    <p>
                        <i class="far fa-comments"></i>
                    </p>
                    <h3>@ViewBag.branch3 Booking</h3>
                    <h4>Sargon</h4>
                </div>
            </div>
            
        </div>
        <div class="row">
            <div class="col-8 col-m-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>
                             
                             <a style="text-decoration:none"   asp-area="Booking" asp-controller="Booking" asp-action="Index"> Booking</a>
                        </h3>
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                    <div class="card-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Họ Tên</th>
                                    <th>Số Lượng</th>
                                    <th>Số Bàn</th>
                                    <th>Chi Nhánh</th>
                                   
                                    <th>Số Điện Thoại</th>
                                    <th>Ngày Tạo</th>
                                </tr>
                            </thead>
                            <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientSlot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingSlot)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            
            
        </tr>
}
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-4 col-m-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            Rencently Customer
                        </h3>
                        <i class="fas fa-ellipsis-h"></i>      
                    </div>
                    <div class="card-content">
                        <table>
                            <thead>
                                <tr>
                                    
                               
                                    
                                </tr>
                            </thead>
                            <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.UserName) 
            </td>
            
            
            
            
        </tr>
}
                                

                            </tbody>
                        </table>
                    </div>
                    
                </div>
            </div>
        </div>

    </div>
    <script src="js/index.js"></script>
</body>

</html>